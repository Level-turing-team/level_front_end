<% if @user.username.nil? || @user.zip.nil? %>
	<h3>Action Needed!</h3>
	<p>Please complete your profile setup</p>
	<%= render partial: "/shared/registration" %>
<% else %>

  <section id='username'>
	<h3><%= @user.username %>'s profile</h3>
  </section>

	<section id="artist-bio">
		<!-- 
		REMOVE THIS LINK ONCE FUNCTIONALITY IS IMPLEMENTED, ITS JUST FOR TESTING 
    Lookup ID is just for testing
		 -->
		<p>Link to other page  <%= link_to("other profile", profile_path(lookup: "2")) %> </p>

    <section id='profilepicture'>
      <p><%= image_tag @profile_data.profile_photo unless @profile_data.profile_photo.nil?%></p>
    </section>

      <section id="distance">
		<% if @user.id == @current_user.id %>
					<p>You are 0 miles from yourself</p>
		<% else %> 
        <p><%= @distance %> miles from you</p>
				<p><%= button_to "Add this user to your circle!",
				 circles_path({user_id: @current_user.id, following_id: @user.id}), 
				 method: :post  if !@circle_ids.include?(@user.id) %></p>
        <p><%= "This user is in your circle!" if @circle_ids.include?(@user.id) %></p>
		<% end %>
			</section>

		<h4>Artist Bio</h4>

		<% if @user.bio.empty? %>
			<p>Nothing to see here!</p>
			<% else %>
			<figure class="text-left">
			  <blockquote class="blockquote">
			  	<p><%= @user.bio %></p>
			  </blockquote>
			  <figcaption class="blockquote-footer">
			    Created by <cite title="Source Title"><%= @user.username %></cite>
			  </figcaption>
			</figure>
		<% end %>
	</section>

<section id="posts">
  <h4>Posts</h4>
    <% @profile_data.posts.each do |post| %>
      <p><%= post.content %></p>
      <p><%= link_to post.link unless post.link.nil? %></p>
      <br>
    <% end %>
  </section>

<% end %>

