<% if @user.username.nil? || @user.zip.nil? %>
	<h3>Action Needed!</h3>
	<p>Please complete your profile setup</p>
	<%= render partial: "/shared/registration" %>
<% else %>

<%= render 'shared/nav_bar' %>

<div class="topcorner">
  <div class="card text-white bg-dark mb-3" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Hello, <%= @user.first_name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>
</div>
<% @circle_posts.each do |post| %>
	<div class="d-flex justify-content-center">
	  <div class="card text-white bg-dark mb-3" style="width: 40rem; top: 15px;">
	    <div class="card-body">
	      <h5 class="card-title"><%= post.username %></h5>
	      <h6 class="card-subtitle mb-2 text-muted">post.created_at</h6>
	      <p class="card-text">post.content</p>
	      <a href="#" class="card-link"><%= post.link %></a>
	      <a href="#" class="card-link">Another link</a>
	    </div>
	  </div>
	</div>
<% end %>
<div class="d-flex justify-content-left" id="topcornerleft">
  <div class="card text-white bg-dark mb-3" style="width: 20rem; top: 30px; Height 100%;">
    <div class="card-body">
      <h5 class="card-title">Hello, <%= @user.first_name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>
</div>
<% end %>
